<p id="notice"><%= notice %></p>

<h1>My TimeSheet</h1>

<% if @active_timer.present? %>
  <p> Clock In at <%= @active_timer.clock_in %> </p>
  <%= link_to "Clock Out", user_time_entry_stop_timers_path(@user, @active_timer), method: :put %>
<% else %>
  <%= link_to "Clock In", user_start_timers_path(@user), method: :post %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Clock In</th>
      <th>Clock Out</th>
      <th>Detail</th>
      <th>Time Spent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_entries.each do |time_entry| %>
      <tr>
        <td><%= time_entry.clock_in %></td>
        <td><%= time_entry.clock_out %></td>
        <td><%= time_entry.detail %></td>
        <td><%= time_entry.time_spent %></td>
        <td><%= link_to 'Edit', edit_user_time_entry_path(@user, time_entry) %></td>
        <td><%= link_to 'Delete', user_time_entry_path(@user, time_entry), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add new entry', new_user_time_entry_path(@user) %>
